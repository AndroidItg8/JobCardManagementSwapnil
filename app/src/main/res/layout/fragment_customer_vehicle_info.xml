<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.itg.jobcardmanagement.registration.fragment.CustomerBasicInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorGray"
            app:errorTextAppearance="@color/colorRed"
            app:hintTextAppearance="@color/colorGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint=" Series Number"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textViewSize"

                app:hintTextAppearance="@color/colorGray" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_model_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_series"
            android:textColorHint="@color/colorGray"
            app:errorTextAppearance="@color/colorRed"
            app:hintTextAppearance="@color/colorGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_model_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Model Code"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textViewSize"

                app:hintTextAppearance="@color/colorGray" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_vin_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_model_code"
            android:textColorHint="@color/colorGray"
            app:errorTextAppearance="@color/colorRed"
            app:hintTextAppearance="@color/colorGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_vin_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="VIN Number"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textViewSize"

                app:hintTextAppearance="@color/colorGray" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_color_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_vin_no"
            android:textColorHint="@color/colorGray"
            app:errorTextAppearance="@color/colorRed"
            app:hintTextAppearance="@color/colorGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_color_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:hint="Color Code "
                android:inputType="text"
                android:lines="3"
                android:maxLines="3"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textViewSize"

                app:hintTextAppearance="@color/colorGray" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_sale_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_color_code"
            android:textColorHint="@color/colorGray"
            app:errorTextAppearance="@color/colorRed"
            app:hintTextAppearance="@color/colorGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_sale_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:hint=" Vehicle Sale Date"
                android:inputType="text"
                android:lines="3"
                android:maxLines="3"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textViewSize"
                app:hintTextAppearance="@color/colorGray" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_selling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_sale_date"
            android:textColorHint="@color/colorGray"
            app:errorTextAppearance="@color/colorRed"
            app:hintTextAppearance="@color/colorGray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_selling_dealer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:hint="Selling Dealer Name"
                android:inputType="text"
                android:lines="3"
                android:maxLines="3"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textViewSize"

                app:hintTextAppearance="@color/colorGray" />
        </android.support.design.widget.TextInputLayout>


    </RelativeLayout>


</ScrollView>
