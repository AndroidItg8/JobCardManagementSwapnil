<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.itg.jobcardmanagement.doument.fragment.DocumentDailogueFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_no_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_empty_back" />

            <TextView
                android:id="@+id/txt_no"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_add"
                android:layout_margin="20dp"
                android:gravity="center"
                android:hint="You have to add your vehicle transfer certificate ...!!!" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/recyclerViewDocument"
                android:layout_margin="20dp"
                android:background="@color/colorPrimary"
                android:text="upload"
                android:textColor="@color/white" />
        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>
