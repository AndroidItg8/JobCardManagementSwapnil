<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itg.jobcardmanagement.servicing.fragment.CheckVehicleConditionFragment">


    <RelativeLayout
        android:id="@+id/rl_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <RadioGroup
            android:id="@+id/rgb_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rgb_dent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rgb_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Dent"
                android:textColor="@drawable/rgb_text_selector" />

            <RadioButton
                android:id="@+id/rgb_scratch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rgb_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:padding="10dp"
                android:text="Scratch"
                android:textColor="@drawable/rgb_text_selector" />

            <RadioButton
                android:id="@+id/rgb_Peel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rgb_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Peel"
                android:textColor="@drawable/rgb_text_selector" />

            <RadioButton
                android:id="@+id/rgb_Cut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rgb_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cut"
                android:textColor="@drawable/rgb_text_selector" />

        </RadioGroup>
    </RelativeLayout>

    <!--<FrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:id="@+id/frame_physical_facts"-->
    <!--android:layout_below="@+id/rl_radio"/>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewPhysicalFacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_radio"
        android:layout_margin="10dp" />


</RelativeLayout>
